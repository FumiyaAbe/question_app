<div class="question-form-container">
  <div class="form-header"></div> <!-- ← 追加 -->
    <div class="question-form-box">
      <%= form_with model: @question, local: true do |form| %>
        
        <div class="form-group">
          <%= form.text_field :title, placeholder: "タイトル", class: "form-title" %>
        </div>

        <div class="form-group">
          <%= form.text_area :content, placeholder: "質問内容", class: "form-content" %>
        </div>

        <div class="form-group">
          <%= form.text_field :author, placeholder: "投稿者名", class: "form-author" %>
        </div>

        <div class="form-group">
          <%= form.submit "POST", class: "form-submit" %>
        </div>

      <% end %>
    </div>

  <div class="back-link">
    <%= link_to "一覧へ戻る", questions_path %>
  </div>
</div>