<div class="answer-form">
  <%# 質問内容 %>
  <div style="background-color: #f5f5f5; padding: 20px; border-radius: 6px; margin-bottom: 30px;">
    <p><strong>タイトル：</strong><%= @question.title %></p>
    <p><strong>質問内容：</strong><%= @question.content %></p>
    <p><strong>投稿者名：</strong><%= @question.name %></p>
  </div>

  <%# フォーム %>
  <%= form_with model: [@question, @answer], local: true do |form| %>
    <div style="margin-bottom: 10px;">
      <%= form.text_area :answer, placeholder: "回答する", rows: 4, style: "width: 100%; padding: 10px;" %>
    </div>

    <div style="margin-bottom: 10px;">
      <%= form.text_field :name, placeholder: "ユーザー名", style: "width: 100%; padding: 10px;" %>
    </div>

    <div>
      <%= form.submit "POST", style: "padding: 8px 16px;" %>
    </div>
  <% end %>
</div>
